---
import NavItem from "./NavItem.astro";
import { Theme } from "../../theme";

const sections = [
  { text: "Home", id: "home" },
  { text: "Sobre mi", id: "about" },
  { text: "Projects", id: "projects" },
  { text: "Contact", id: "contact" },
];
---

<div
  class={`w-11/12 ${Theme.secondary.bg} ${Theme.secondary.text} ${Theme.secondary.border} border-2 flex items-center justify-around gap-1 h-12 m-1.5 rounded-full shadow-lg backdrop-blur-sm bg-opacity-95`}
>
  {sections.map((s) => <NavItem text={s.text} href={`#${s.id}`} id={s.id} />)}
</div>

<script>
  const sections = document.querySelectorAll("section");
  const navLinks = document.querySelectorAll(".nav-link");

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        const id = entry.target.getAttribute("id");
        const link = document.querySelector(`.nav-link[href="#${id}"]`);

        if (entry.isIntersecting) {
          navLinks.forEach((l) => {
            l.classList.remove(
              "bg-rose-600",
              "text-rose-50",
              "font-bold",
              "shadow-lg"
            );
          });
          link?.classList.add(
            "bg-rose-600",
            "text-rose-50",
            "font-bold",
            "shadow-lg"
          );
        }
      });
    },
    { threshold: 0.6 } // se activa cuando el 60% de la sección está visible
  );

  sections.forEach((section) => observer.observe(section));
</script>
