---
// Componente para mostrar la paleta de colores personalizada
import { Theme } from "../../theme";
---

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Paleta de Colores
      </h1>
      <p class="text-gray-600">
        Tus colores personalizados
      </p>
    </div>

    <!-- Grid de colores -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      {Object.entries(Theme).map(([themeName, themeData]) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <!-- Color principal -->
          <div class={`${themeData.bg} h-24`}></div>
          <!-- Info -->
          <div class="p-3">
            <h3 class="font-medium text-gray-800 capitalize mb-1">{themeName}</h3>
            <code class="text-xs text-gray-500">{themeData.bg.replace('bg-', '')}</code>
          </div>
        </div>
      ))}
    </div>

    <!-- Ejemplos rÃ¡pidos -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Ejemplos</h2>
      
      <!-- Botones -->
      <div class="mb-6">
        <h3 class="font-medium text-gray-700 mb-3">Botones</h3>
        <div class="flex flex-wrap gap-3">
          {Object.entries(Theme).map(([themeName, themeData]) => (
            <button class={`${themeData.bg} ${themeData.text} px-4 py-2 rounded capitalize text-sm hover:opacity-90 transition-opacity`}>
              {themeName}
            </button>
          ))}
        </div>
      </div>

      <!-- Cards -->
      <div>
        <h3 class="font-medium text-gray-700 mb-3">Tarjetas</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {Object.entries(Theme).slice(0, 3).map(([themeName, themeData]) => (
            <div class={`${themeData.bg} ${themeData.text} p-4 rounded-lg`}>
              <h4 class="font-medium capitalize">{themeName}</h4>
              <p class="text-sm opacity-90 mt-1">Ejemplo de tarjeta</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>
